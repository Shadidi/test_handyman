<h1>Edit your Job Request</h1>

<%= bootstrap_form_with model: @job, url: update_job_path(@job), method: :patch, local: true do |job| %>
  
  <%= job.text_field :name, label: 'Job Title'%>
  <%= job.text_area :description %>
  <%= job.select :speciality, $SPECIALTY_TYPES, label: 'Specialty Preference' %>
  <%= job.submit 'Update Posting', class: 'btn btn-custom-color' %>

<% end %>

<p class="mt-3">
  <%= link_to 'Cancel', my_jobs_path(@job), class: 'btn btn-custom-color' %>
</p>